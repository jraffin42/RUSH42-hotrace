	"version": "0.2.0",
	"configurations": [
		{
			"name": "gdb : hotrace.debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/hotrace.debug",
			"args": ["example.htr"],
			"cwd": "${workspaceFolder}",
			"externalConsole": false,
			"stopAtEntry": false,
			"environment": [],
			"MIMode": "gdb",
			"miDebuggerPath": "/usr/bin/gdb",
			"preLaunchTask": "Build hotrace",
		},
		{
			"name": "lldb : hotrace.debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/hotrace.debug",
			"args": ["example.htr"],
			"cwd": "${workspaceFolder}",
			"externalConsole": false,
			"stopAtEntry": false,
			"environment": [],
			"MIMode": "lldb",
			"preLaunchTask": "Build hotrace",
		}
	]
}
